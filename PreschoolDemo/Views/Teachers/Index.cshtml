@model IEnumerable<PreschoolDemo.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-8">
        <h4>Teachers</h4>
    </div>
    <div class="col-md-4 mb-2">
        <a class="btn btn-success float-left" asp-action="Create">Add Teacher</a>
    </div>
</div>


    

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a class="btn btn-danger delete text-white" data-id="@item.Id" data-controller="Teachers" data-action="Delete"
                   data-body-message="Are you sure you want to Delete @Html.DisplayFor(modelItem => item.FirstName)?">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
